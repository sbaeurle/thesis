{
    // exclude all temporary latex files from explorer view
    "files.exclude": {
        "**/*.aux": true,
        "**/*.acn": true,
        "**/*.acr": true,
        "**/*.alg": true,
        "**/*.bak": true,
        "**/*.bbl": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.glo": true,
        "**/*.glg": true,
        "**/*.gls": true,
        "**/*.ist": true,
        "**/*.log": true,
        "**/*.lof": true,
        "**/*.lot": true,
        "**/*.lol": true,
        "**/*.out": true,
        "**/*.run.xml": true,
        "**/*.synctex.gz": true,
        "**/*.toc": true
    },
    // enable spell checking for latex files
    "cSpell.enabled": true,
    "cSpell.language": "en,de",
    "cSpell.enabledLanguageIds": [
        "latex" // add support for more file formats here
    ],
    "cSpell.diagnosticLevel": "Hint"
}