{
    // exclude all temporary latex files from explorer view
    "files.exclude": {
        "*.aux": true,
        "*.bak": true,
        "*.bbl": true,
        "*.bcf": true,
        "*.blg": true,
        "*.fdb_latexmk": true,
        "*.fls": true,
        "*.lof": true,
        "*.lot": true,
        "*.out": true,
        "*.run.xml": true,
        "*.synctex.gz": true,
        "*.toc": true
    },
    // enable spell checking for latex files
    "cSpell.enabled": true,
    "cSpell.language": "en,de",
    "cSpell.enabledLanguageIds": [
        "latex" // add support for more file formats here
    ],
    "cSpell.diagnosticLevel": "Hint",
    // docker integration of latex workshop
    "latex-workshop.docker.enabled": true,
}